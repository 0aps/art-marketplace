{
  "name": "frontend-microservice",
  "version": "1.0.0",
  "description": "Artwork react based web application.",
  "main": "src/index.js",
  "author": "TeamTwo",
  "license": "MIT",
  "scripts": {
    "serve": "webpack serve --config config/webpack.config.js --mode=development",
    "dev": "webpack --config config/webpack.config.js --mode=development --watch",
    "build": "webpack --config config/webpack.config.js --mode=production --node-env=production",
    "build:dev": "webpack --config config/webpack.config.js --mode=development",
    "lint": "semistandard src/",
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --testMatch='**/tests.js' --coverage"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@stripe/react-stripe-js": "^1.7.0",
    "@stripe/stripe-js": "^1.22.0",
    "art-marketplace-common": "^1.0.1",
    "axios": "^0.24.0",
    "bootstrap": "^5.1.3",
    "classnames": "^2.3.1",
    "dotenv": "^10.0.0",
    "font-awesome": "^4.7.0",
    "query-string": "^7.0.1",
    "react": "^17.0.2",
    "react-bootstrap-sweetalert": "^5.2.0",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.1.1",
    "react-toastify": "^8.1.0",
    "reactstrap": "^9.0.1",
    "redux": "^4.1.2",
    "sweetalert": "^2.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.3",
    "@reduxjs/toolkit": "^1.7.0",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.5.1",
    "jest": "^27.4.3",
    "postcss-loader": "^6.2.1",
    "pre-commit": "^1.2.2",
    "react-refresh": "^0.11.0",
    "semistandard": "^16.0.1",
    "style-loader": "^3.3.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0"
  },
  "jest": {
    "transform": {}
  },
  "semistandard": {
    "env": [
      "jest"
    ],
    "global": [
      "localStorage",
      "location"
    ]
  },
  "babel": {
    "plugins": [
      "@babel/syntax-dynamic-import",
      "@babel/transform-runtime"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ],
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ]
  },
  "postcss": {
    "plugins": [
      [
        "autoprefixer"
      ]
    ]
  }
}
